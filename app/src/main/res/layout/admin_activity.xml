<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".admin.AdminActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgMMovie"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:src="@drawable/view_m_movie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnBackAdminActivity"
        android:layout_width="41dp"
        android:layout_height="46dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/back_purple_conner"
        android:padding="10dp"
        android:src="@drawable/img_3"
        app:layout_constraintBottom_toBottomOf="@+id/imgMMovie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgMMovie" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnUserManagement"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="@drawable/custom_layout_congratulations"
        android:padding="10dp"
        android:text="User"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgMMovie" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRevenueManagement"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_layout_congratulations"
        android:padding="10dp"
        android:text="Revenue"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnUserManagement" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnResetDay"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_layout_congratulations"
        android:padding="10dp"
        android:text="@string/resetting_by_day"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnRevenueManagement" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnResetMonth"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/custom_layout_congratulations"
        android:padding="10dp"
        android:text="@string/resetting_by_month"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnResetDay" />





</androidx.constraintlayout.widget.ConstraintLayout>
